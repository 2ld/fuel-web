	{
	    "name": "mysql_server", 
	    "deploy": {
		"driver": "chef-solo",
		"driver_args": {
		    "run_list": [
			"recipe[mysql::server@0.1.0]"
		    ]
		}
	    },
	    "provides": ["mysql_endpoint"],
	    "requires": []
	}

    ],
    "points": [
	{
	    "name": "mysql_endpoint",
