	{
	    "name": "sample_monitor", 
	    "deploy": {
		"driver": "chef-solo",
		"driver_args": {
		    "run_list": [
			"recipe[sample-cook::monitor@0.3.0]"
		    ]
		}
	    },
	    "provides": ["monitor_endpoint"],
	    "requires": []
