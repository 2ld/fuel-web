    "roles": [
	{
            "name": "role1",
            "components": [
		"sample_compute",
		"sample_monitor"
            ]
	},
	{
            "name": "role2",
            "components": [
		"sample_default"
            ]
	},
	{
            "name": "mysql_server",
            "components": [
		"mysql_server"
            ]
	}
    ],
    "components": [
	{
	    "name": "sample_default", 
	    "deploy": {
		"driver": "chef-solo",
		"driver_args": {
		    "run_list": [
			"recipe[sample-cook::default@0.3.0]"
		    ]
		}
	    },
	    "provides": ["default_endpoint"],
	    "requires": ["monitor_endpoint"]
	},
	{
	    "name": "sample_compute", 
	    "deploy": {
		"driver": "chef-solo",
